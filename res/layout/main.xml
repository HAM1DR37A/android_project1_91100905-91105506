<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="@android:color/holo_red_light">
    <ImageView
               android:id="@+id/animatedImage"
               android:layout_width="118dp"
               android:layout_height="118dp"
               android:src="@drawable/gopher"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="235dp" android:layout_gravity="center_horizontal"
            android:id="@+id/map"
            android:background="#ffe086">
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/gopher" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" android:src="@drawable/gopher"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
    >
        <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/option"
                android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                android:background="@android:color/white"
                android:src="@drawable/more"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/left"
                android:background="@android:color/white"
                android:layout_centerVertical="true" android:layout_toLeftOf="@+id/imageButton2"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/up"
                android:background="@android:color/white"
                android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/imageButton3"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/right"
                android:background="@android:color/white"
                android:layout_alignTop="@+id/imageButton" android:layout_toLeftOf="@+id/option"
                android:layout_marginRight="48dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:id="@+id/imageButton4"
                android:src="@drawable/down"
                android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/imageButton"/>
    </RelativeLayout>
</LinearLayout>

